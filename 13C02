#include <Servo.h>

// Arduino pin assignment
#define PIN_SERVO 10

// configurable parameters
#define _DUTY_MIN 0  // servo full clock-wise position (0 degree)
#define _DUTY_NEU 1400  // servo neutral position (90 degree)
#define _DUTY_MAX 2800  // servo full counter-clockwise position (180 degree)

// --- 요구 사항에 따른 _SERVO_SPEED 및 위치 설정 ---
#define _SERVO_SPEED 0.3 // servo speed limit (unit: degree/second)

// 0.3 deg/sec 요구사항: 90° 이동 (0도 -> 90도)
#define _POS_START _DUTY_MIN    // servo start position (0도 = 1000us)
#define _POS_END   _DUTY_NEU    // servo end position (90도 = 1500us)

#define INTERVAL 20     // servo update interval (unit: msec)

// global variables
unsigned long last_sampling_time; // unit: msec

Servo myservo;

float duty_change_per_interval; // maximum duty difference per interval (float으로 정밀도 유지)
float duty_accumulate = 0.0;    // 소수점 duty 변화량을 누적하여 오차를 보정할 변수

int duty_target;    // Target duty time
int duty_curr;      // Current duty time

int toggle_interval, toggle_interval_cnt;

void setup() {
  // initialize GPIO pins
  myservo.attach(PIN_SERVO);
  duty_target = duty_curr = _POS_START;
  myservo.writeMicroseconds(duty_curr);
  
  // initialize serial port
  Serial.begin(57600);
  
  // convert angular speed into duty change per interval.
  // duty_change_per_interval (us/interval) = _SERVO_SPEED (deg/sec) * (INTERVAL / 1000.0) (sec) * ( (Duty_Range) / 180.0 ) (us/deg)
  duty_change_per_interval = 
    _SERVO_SPEED * ( (float)INTERVAL / 1000.0) * ( (_DUTY_MAX - _DUTY_MIN) / 180.0 );
  
  Serial.print("duty_change_per_interval (us/interval):");
  Serial.println(duty_change_per_interval);
  
  // initialize variables for servo update.
  // 이동할 총 각도 계산
  float total_angle_move = abs((float)_POS_END - (float)_POS_START) * 180.0 / (float)(_DUTY_MAX - _DUTY_MIN);
  // 토글 인터벌 계산: (총 이동 시간(msec)) / INTERVAL (msec/interval)
  toggle_interval = round((total_angle_move / _SERVO_SPEED) * 1000.0 / INTERVAL);
  toggle_interval_cnt = toggle_interval; // 처음에는 이동을 시작하도록 설정
  
  // initialize last sampling time
  last_sampling_time = 0;
}

void loop() {
  // wait until next sampling time. 
  if (millis() < (last_sampling_time + INTERVAL))
    return;
  
  // adjust duty_curr toward duty_target by accumulating float duty change.
  if (duty_target > duty_curr) {
    duty_accumulate += duty_change_per_interval; // 변화량을 누적
    
    // 누적된 값이 1.0 이상이면 duty_curr를 1us 증가시키고 누적 값에서 1.0을 뺌 (등속 이동의 핵심)
    while (duty_accumulate >= 1.0) {
        duty_curr++;
        duty_accumulate -= 1.0;
    }
    
    if (duty_curr > duty_target) {
        duty_accumulate = 0.0; // 목표에 도달하면 누적값 초기화
        duty_curr = duty_target;
    }
  } else if (duty_target < duty_curr) {
    duty_accumulate += duty_change_per_interval; // 변화량을 누적
    
    // 누적된 값이 1.0 이상이면 duty_curr를 1us 감소시키고 누적 값에서 1.0을 뺌
    while (duty_accumulate >= 1.0) {
        duty_curr--;
        duty_accumulate -= 1.0;
    }
    
    if (duty_curr < duty_target) {
        duty_accumulate = 0.0; // 목표에 도달하면 누적값 초기화
        duty_curr = duty_target;
    }
  } else {
      // duty_target == duty_curr (정지 상태)
      duty_accumulate = 0.0;
  }

  // update servo position
  myservo.writeMicroseconds(duty_curr);

  // output the read value to the serial port
  Serial.print("Min:"); Serial.print(_DUTY_MIN);
  Serial.print(",duty_target:"); Serial.print(duty_target);
  Serial.print(",duty_curr:");   Serial.print(duty_curr);
  Serial.print(",Max:"); Serial.println(_DUTY_MAX);

  // toggle duty_target between _POS_START and _POS_END.
  if (duty_curr == duty_target && toggle_interval_cnt >= toggle_interval) {
    // 목표 위치에 도달했고, 정지 시간(toggle_interval)이 경과했을 때 토글
    toggle_interval_cnt = 0;
    if (duty_target == _POS_START)
      duty_target = _POS_END;
    else
      duty_target = _POS_START;
  } else if (duty_curr == duty_target) {
     // 목표 위치에 도달했지만 정지 시간이 경과하지 않았다면 (정지 상태)
     // 아무것도 하지 않습니다.
  } else {
    // 이동 중일 때만 카운트를 증가시킵니다.
    toggle_interval_cnt++;
  }

  // update last sampling time
  last_sampling_time += INTERVAL;
}
